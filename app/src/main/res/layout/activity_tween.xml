<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space"
    tools:context="com.centennial.elluis.sanchez_comp304_a3.TweenActivity">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
android:id="@+id/earthImageView"
        android:layout_marginTop="80dp"
        android:adjustViewBounds="true"
        android:src="@drawable/earth" />

    <ImageView
        android:id="@+id/sunImageView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/sun" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <Button
            android:id="@+id/revolveStartButton"
            style="@style/buttonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#181c46"
            android:onClick="revolveOnClick"
            android:text="@string/startButton"
            android:textColor="#cadfea"
            android:layout_marginEnd="35dp"/>
        <Button
            android:layout_marginStart="35dp"
            android:id="@+id/StopRevolvingButton"
            style="@style/buttonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#181c46"
            android:onClick="stopRevolveOnClick"
            android:text="@string/stopButton"
            android:textColor="#cadfea" />
    </LinearLayout>
</RelativeLayout>
